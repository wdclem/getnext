int	main()
{
	int		fd;
	int		retget;
	char	*tmp;
	char	**line;
	int		n = 1;

	line = &tmp;
	fd = open("8charsnlx8", O_RDONLY);
	if (fd < 0)
		return (0);
	while (1)
	{
		retget = get_next_line(fd, line);
		if (retget < 0)
			break;
		printf("%s<- end of line %d\n", *line, n);
		free(*line);
		n++;
	}
	close (fd);
	return(0);
}
